<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.fertilizerandwatercontrol.SetTimeFragment"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            android:amPmTextColor="@color/green"
            android:headerBackground="@color/green"
            android:numbersSelectorColor="@color/green" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/volume"
            android:hint="fertilizer volume in milliliter"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <Button
            android:text="Morning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/morning" />

        <Button
            android:text="Evening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evening" />

    </LinearLayout>

</FrameLayout>
